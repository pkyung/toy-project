<!doctype html>
<html lang="ko">
    <head>
        <meta charset="UTF-8">
        <title>boardOne</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    </head>
    <body>
        {{#board}}
            <div class="container">
                <div style="text-align: center"><h2>{{title}}</h2></div>
                <div style="text-align: right"> <h6>작성자: {{writer}}</h6></div>
                <div >{{content}}</div>
                <div style="text-align: right"><h6>등록일: {{createAt}}</h6></div>
                <div style="text-align: right"><h6>수정일: {{modifiedAt}}</h6></div>
                {{#mine}}
                    <div>
                        <form action="/board/{{id}}" method="post">
                            <button onclick="location.href='/boardUpdate/{{id}}'" type="button" class="btn btn-outline-secondary">수정</button>
                            <input type="hidden" name="_method" value="delete">
                            <input class="btn btn-outline-secondary" value="삭제" type="submit">
                        </form>
                    </div>
                {{/mine}}
            </div>


        <hr>
        <form method="post" action="/comment/{{id}}">
            <div class="container">
                <input name="content" style=" width: 90%; display: inline" class="form-control" type="text">
                <input class="btn btn-outline-secondary" type="submit">
            </div>
        </form>
        {{/board}}
        <div id="comment">

        </div>
        {{#board}}
        <input type="hidden" value="{{id}}" id="boardId">
        {{/board}}
    </body>
    <script src="https://code.jquery.com/jquery-latest.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/comment.js"></script>
</html>