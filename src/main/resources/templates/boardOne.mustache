<!doctype html>
<html lang="ko">
    <head>
        <meta charset="UTF-8">
        <title>boardOne</title>
    </head>
    <body>
        {{#board}}
            <div>{{title}}</div>
            <div>{{writer}}</div>
            <div>{{content}}</div>
            <div>{{createAt}}</div>
            <div>{{modifiedAt}}</div>
        {{/board}}
        {{#mine}}
        <div>
            <form action="/board/{{id}}" method="post">
                <button onclick="location.href='/boardUpdate/{{id}}'" type="button" class="btn btn-outline-secondary">수정</button>
                <input type="hidden" name="_method" value="delete">
                <input class="btn btn-outline-secondary" value="삭제" type="submit">
            </form>
        </div>
        {{/mine}}
        <hr>

    </body>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</html>